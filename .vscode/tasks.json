    // TODO: fix this... mmdc not found
    // Likely related: https://github.com/Microsoft/vscode/issues/29412
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build docs",
            "type": "shell",
            "command": "make",
            "osx": {
                "options": {
                    "cwd": "${workspaceRoot}/docs",
                    "env": {
                        "PATH": "/usr/bin:/usr/local/bin:${HOME}/node_modules/.bin",
                    },
                },
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}