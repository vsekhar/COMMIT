    "version": "0.2.0",
    "configurations": [
        {
            "name": "Drain",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/psops/",
            "cwd": "${workspaceFolder}",
            "env": {
                "GOOGLE_APPLICATION_CREDENTIALS": "${env:HOME}/.config/gcloud/fabula-service.json",
            },
            "args": [
                "-verbose",
                "-n=1000",
                "-timeout=30s",
                "drain",
            ],
        },
        {
            "name": "Publish",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/psops",
            "cwd": "${workspaceFolder}",
            "env": {
                "GOOGLE_APPLICATION_CREDENTIALS": "${env:HOME}/.config/gcloud/fabula-service.json",
            },
            "args": [
                "-verbose",
                "-n=1000",
                "load",
            ],
        }
    ]
}
